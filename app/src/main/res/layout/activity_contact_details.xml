<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactDetails"
    android:background="@color/backgroundApp"

    >
    <ImageView
        android:id="@+id/back_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/arrow_back"
        android:background="@drawable/sircular_edit_background"
        android:padding="10dp"
        android:paddingStart="15dp"

        />
    <ImageView

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/details_image_edit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_edit"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/sircular_edit_background"
        android:padding="12dp"
        />

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/details_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_person"
        android:layout_marginTop="130dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/sircular_shape"
        android:padding="7dp"
        />
    <TextView
        android:id="@+id/name_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="Amr Karim"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/phone_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_details_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="0111456875"
        android:textColor="@color/white2"
        android:textSize="20dp"

        />
    <TextView
        android:id="@+id/description_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_details_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:text="AmrKarim@gmail.com"
        android:textColor="@color/hint_color_white"
        android:textSize="18dp"

        />

    <TextView
        android:id="@+id/day_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_details_tv"
        android:layout_marginTop="10dp"
        android:text="Today"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:layout_marginStart="20dp"
        />
    <androidx.cardview.widget.CardView
    android:id="@+id/miss_call_cardView"
    app:layout_constraintTop_toBottomOf="@id/day_details_tv"
    app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/coming_call_cardView"
    android:layout_width="0dp"
    android:layout_height="180dp"
    android:layout_marginStart="20dp"
    android:backgroundTint="@color/background_views"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="15dp"
        android:layout_marginEnd="10dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ic_missed"
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:src="@drawable/phone_missed"
            />
        <TextView
            android:id="@+id/miss_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ic_missed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Missed Call"
            android:textColor="@color/red"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/miss_call_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/miss_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:text="9:23 pm"
            android:textColor="@color/hint_color_white"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/miss_call_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/miss_call_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="18dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/coming_call_cardView"
        app:layout_constraintTop_toBottomOf="@id/day_details_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/miss_call_cardView"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/background_views"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ic_coming_call"
                android:layout_width="40dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:src="@drawable/incoming_call"
                />
            <TextView
                android:id="@+id/coming_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ic_coming_call"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Coming Call"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/coming_call_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/coming_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:text="9:01 pm"
                android:textColor="@color/hint_color_white"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/coming_call_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/coming_call_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/coming_call_number"
                app:layout_constraintTop_toBottomOf="@id/coming_call_time"
                android:text="2min"
                android:layout_marginTop="15dp"
                android:textColor="@color/hint_color_white"
                android:layout_marginStart="5dp"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>